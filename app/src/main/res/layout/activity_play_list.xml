<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".PlayListActivity">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/gold"
        android:padding="0dp"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/favouriteFolderBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/favorite_folder"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MUSIC PLAYER"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_below="@id/title_layout"
        android:background="@color/gold"
        android:layout_above="@id/controlsLayout"
        android:layout_marginBottom="2dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gold"
        android:padding="10dp"
        android:id="@id/controlsLayout"
        android:visibility="gone">

        <!-- Song Title -->
        <TextView
            android:id="@+id/songTitleTextViewMinimized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="Song Title"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
             />

        <!-- Controls -->
        <LinearLayout
            android:id="@+id/controlsLayoutMinimized"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/songTitleTextViewMinimized"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Previous Button -->
            <ImageView
                android:id="@+id/previousButtonMinimized"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/previous" />

            <!-- Play/Pause Button -->
            <ImageView
                android:id="@+id/playPauseButtonMinimized"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/playwhite" />

            <!-- Next Button -->
            <ImageView
                android:id="@+id/nextButtonMinimized"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/next" />

        </LinearLayout>

        <!-- Up Button -->
        <ImageView
            android:id="@+id/upBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/up" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/playingSongLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gold"
        android:visibility="gone"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Top Bar -->
                <LinearLayout
                    android:id="@+id/topBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Back Button -->
                    <ImageView
                        android:id="@+id/downBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/down" />

                </LinearLayout>

                <!-- Album Cover -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/albumCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="60dp">

                    <ImageView
                        android:id="@+id/albumCoverImageView"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:src="@drawable/album" />
                </androidx.cardview.widget.CardView>


                <!-- Song Title -->
                <TextView
                    android:id="@+id/songTitleTextView"
                    android:layout_width="300dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/albumCardView"
                    android:layout_centerHorizontal="true"
                    android:text="Song Title"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Song Artist -->
                <TextView
                    android:id="@+id/songArtistTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/songTitleTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Artist Name"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!-- Progress Bar -->
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/linearProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/songArtistTextView"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="20dp"
                    android:progressTint="@color/gold"
                    android:thumb="@drawable/thumb"
                    android:thumbTint="@color/gold" />

                <!-- Start TextView -->
                <TextView
                    android:id="@+id/startTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearProgressBar"
                    android:layout_alignStart="@id/linearProgressBar"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="0:10"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!-- End TextView -->
                <TextView
                    android:id="@+id/endTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearProgressBar"
                    android:layout_alignEnd="@id/linearProgressBar"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:text="4:00"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <!-- Controls -->
                <LinearLayout
                    android:id="@+id/controlsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/endTextView"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginLeft="40dp">

                    <!-- Previous Button -->
                    <ImageView
                        android:id="@+id/previousButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/previous" />

                    <!-- Play/Pause Button -->
                    <ImageView
                        android:id="@+id/playPauseButton"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/play" />

                    <!-- Next Button -->
                    <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/next" />
                    <ImageView
                        android:id="@+id/favouriteButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:src="@drawable/favorite_empty" />


                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>
